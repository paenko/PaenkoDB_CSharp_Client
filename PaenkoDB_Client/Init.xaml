<Window x:Class="PaenkoDB_Client.Init"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaenkoDB_Client"
        mc:Ignorable="d"
        Title="Peer Configuration" Height="300" Width="310">
    <Grid>
        <Grid x:Name="GridPeerlist" Margin="0,25,120,0">
            <ListBox x:Name="DataPeerlist"/>
        </Grid>
        <Label x:Name="LabelDescription" Content="Peers:" Width="50" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="ButtonAdd" Content="Add" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="0,25,10,0"/>
        <Button x:Name="ButtonEdit" Content="Edit" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="0,55,10,0"/>
        <Button x:Name="ButtonRemove" Content="Remove" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="0,85,10,0"/>
        <Button x:Name="ButtonConnect" Content="Connect" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10"/>
        <TextBox x:Name="TextUser" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,80"/>
        <PasswordBox x:Name="TextPassword" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,40"/>
        <Label Content="Username" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,100" HorizontalContentAlignment="Center"/>
        <Label Content="Password" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,60" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
